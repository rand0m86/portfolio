cf()
nav-height = 80px
text-color = white

body
  background: url(http://ironsummitmedia.github.io/startbootstrap-landing-page/img/intro-bg.jpg) no-repeat center center
  color: text-color
  font-family: 'Lato', sans-serif
  height: 100%

a
  link()
  color white
  &:hover
    color white
section
  padding: nav-height 0px
  background-size: cover
  article
    center(500px)
    padding: 10% 0
    text-align: center
    h1
      font-size: 4em
    h2
      font-size: 2em
    hr
      width: 90%
